<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_clothes_up"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/icon_sunglasses"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/icon_clothes_down"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/icon_clothes_up"
        android:layout_alignStart="@+id/icon_clothes_up"
        android:layout_below="@+id/icon_clothes_up"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_clothes_down"
        android:layout_centerHorizontal="true"
        android:text="getting location..." />

    <ImageView
        android:id="@+id/icon_sunglasses"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/icon_umbrella"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/icon_sunglasses"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/icon_weather"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/icon_sunglasses" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/rain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2" />
    <TextView
        android:id="@+id/temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"/>

    <TextView
        android:id="@+id/tempWhenRain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"/>
    <TextView
        android:id="@+id/datetime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"/>

    <TextView
        android:id="@+id/datetimeOnRain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"/>
</LinearLayout>
</RelativeLayout>